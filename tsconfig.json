{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "noEmit": true,
    "baseUrl": ".",
    "module": "CommonJS",
    "noEmitOnError": false,
    "declaration": true,
    "paths": {
      "@uxdm/schema": ["./packages/schema/src"],
      "@uxdm/model-sketch": ["./packages/model-sketch/src"],
      "@uxdm/model-sketch/*": ["./packages/model-sketch/src/*"],
      "uxdm/*": ["./packages/uxdm/src/*"],
      "uxdm": ["./packages/uxdm/src"]
    }
  },
  "exclude": ["config", "scripts"]
}
